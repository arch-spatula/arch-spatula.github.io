---
const { tags, size } = Astro.props;
---

<ul class={size ? "tiny-tag-container" : "tag-container"}>
  {
    tags.map((tag) => (
      <li class={size ? "tiny-tag-item " : "tag-item"}>{tag}</li>
    ))
  }
</ul>

<style>
  .tag-container {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin: 0.75rem 0 0.25rem;
  }

  .tag-item {
    background: #93c5fd;
    color: #f9fafb;
    padding: 0.5rem 0.75rem;
    border-radius: 0.25rem;
    list-style: none;
    margin: 0;
  }

  .tiny-tag-container {
    display: flex;
    gap: 0.375rem;
    flex-wrap: wrap;
    margin: 0.75rem 0 0.25rem;
  }

  .tiny-tag-item {
    background: #93c5fd;
    color: #f9fafb;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    list-style: none;
    margin: 0;
    font-size: 0.875rem;
    line-height: 1.25rem;
  }
</style>
