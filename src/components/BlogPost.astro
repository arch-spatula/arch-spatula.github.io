---
const { title, url, description, tags } = Astro.props;
---

<li class="blog-post">
  <a href={url}>
    <h2 class="blog-post-title">
      {title}
    </h2>
    <p class="description">{description}</p>
  </a>
  <ul class="tag-container">
    {tags.map((tag) => <li class="tag-item">{tag}</li>)}
  </ul>
</li>

<style>
  .blog-post {
    border-width: 1px 0px 0;
    border-style: solid;
    border-color: #d1d5db;
    padding: 0.25rem 0 0.25rem;
  }

  .blog-post-title {
    font-size: 1.5rem;
    line-height: 2.25rem;
    font-weight: 700;
    color: #111827;
    margin: 0.5rem 0 0;
  }

  .description {
    font-size: 1rem;
    color: #111827;
    margin: 0.25rem 0 0;
  }

  .tag-container {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
    margin: 0.5rem 0 0.25rem;
  }

  .tag-item {
    background-color: #9ca3af;
    color: #f9fafb;
    padding: 0.5rem 0.75rem;
    border-radius: 0.25rem;
  }
</style>
