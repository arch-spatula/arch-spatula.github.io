---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
  <slot />
</BaseLayout>

<style is:global>
  a {
    color: #00539f;
  }

  body {
    font-size: 1rem;
    line-height: 1.5rem;
    /* text-align: left; */
    word-break: keep-all;
  }
  .tags {
    display: flex;
    flex-wrap: wrap;
    margin: 0 auto;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: 0.5em;
    padding: 0.5em 1em;
    font-size: 1.15em;
    background-color: #f8fcfd;
  }

  /* 기본 tag를 스타일링합니다. */
  blockquote {
    margin: 1rem 0;
    height: 3rem;
    display: flex;
    align-items: center;
    background-color: #f9fafb;
    padding: 1rem;
    border-radius: 0.75rem;
  }

  h1 {
    margin: 2rem 0 1rem;
  }

  h2 {
    margin: 2rem 0 1rem;
  }
  p {
    margin: 0.5rem 0;
  }

  li {
    margin: 0.5rem 0;
  }
</style>
