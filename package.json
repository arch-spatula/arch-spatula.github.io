  "type": "module",
  "scripts": {
    "build": "tsx app/build.ts",
    "dev": "tsx app/server.ts",
    "preview": "tsx app/preview.ts",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md,html,css}\"",
